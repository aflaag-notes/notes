% Proof environment

\if\useItalian1
    \newcommand{\proofenv}[2][Dimostrazione]{\textit{#1}.#2 $\hfill\qed${\parfillskip0pt\par}}                                                                                                                      % Proof environment
    \newcommand{\idea}[2][Idea]{\tit{#1}.#2}                                                                                                                                                                        % Idea environment
    \newcommand{\proofiff}[3][Dimostrazione]{\proofenv[#1]{\hspace{0.7cm} \begin{enumerate}[label=] \item \tit{Prima implicazione}.#2 \item \tit{Seconda implicazione}.#3 \end{enumerate}}}                         % If-and-only-iff proof environment
    \newcommand{\proofind}[5][Dimostrazione]{\proofenv[#1]{#2 \begin{enumerate}[label=] \item \tit{Caso base}.#3 \item \tit{Ipotesi induttiva}.#4 \item \tit{Passo induttivo}.#5 \end{enumerate}}}                  % Proof by induction environment
    \newcommand{\proofstrind}[5][Dimostrazione]{\proofenv[#1]{#2 \begin{enumerate}[label=] \item \tit{Caso base}.#3 \item \tit{Ipotesi induttiva forte}.#4 \item \tit{Passo induttivo}.#5 \end{enumerate}}}         % Proof by strong induction environment
\else
    \newcommand{\proofenv}[2][Proof]{\textit{#1}.#2 $\hfill\qed${\parfillskip0pt\par}}                                                                                                                              % Proof environment
    \newcommand{\idea}[2][Idea]{\tit{#1}.#2}                                                                                                                                                                        % Idea environment
    \newcommand{\proofiff}[3][Proof]{\proofenv[#1]{\hspace{0.7cm} \begin{enumerate}[label=] \item \tit{First implication}.#2 \item \tit{Second implication}.#3 \end{enumerate}}}                                    % If-and-only-iff proof environment
    \newcommand{\proofind}[5][Proof]{\proofenv[#1]{#2 \begin{enumerate}[label=] \item \tit{Base case}.#3 \item \tit{Inductive hypothesis}.#4 \item \tit{Inductive step}.#5 \end{enumerate}}}                         % Proof by induction environment
    \newcommand{\proofstrind}[5][Proof]{\proofenv[#1]{#2 \begin{enumerate}[label=] \item \tit{Base case}.#3 \item \tit{Strong inductive hypothesis}.#4 \item \tit{Inductive step}.#5 \end{enumerate}}}               % Proof by strong induction environment
\fi

